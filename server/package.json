{
  "name": "rin-server",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development bun --watch src/server.ts",
    "dev:test": "NODE_ENV=test bun --watch src/server.ts",
    "generate": "bun drizzle-kit generate",
    "mig": "bun migrate.ts",
    "client": "bun --watch src/client.ts",
    "build": "bun build src/server.ts",
    "start": "NODE_ENV=production bun src/server.ts",
    "t": "rm -f test.db && NODE_ENV=test bun migrate.ts && NODE_ENV=test bun test --coverage"
  },
  "devDependencies": {
    "@types/bun": "^1.1.2",
    "drizzle-kit": "^0.21.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.0.2",
    "@elysiajs/eden": "^1.0.13",
    "@elysiajs/jwt": "^1.0.2",
    "arctic": "^1.8.1",
    "drizzle-orm": "^0.30.10",
    "elysia": "^1.0.21",
    "elysia-oauth2": "^1.2.0",
    "logestic": "^1.1.1",
    "@elysiajs/server-timing": "^1.0.2"
  },
  "trustedDependencies": [
    "es5-ext"
  ]
}
